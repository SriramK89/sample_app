<% provide(:title, @title) %>
<%= link_to gravatar_for(@micropost.user), @micropost.user %>
<span class="user">
<%= link_to @micropost.user.name, @micropost.user %>
</span>
<span class="content"><%= @micropost.content %></span>
<span class="timestamp">
Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
<%= pluralize(@comments.count, "comment") %> on this micropost.
</span>
<% if current_user?(@micropost.user) %>
<%= link_to "delete", @micropost, method: :delete,
                                 data: { confirm: "Are you sure to delete?" },
                                 title: @micropost.content %>
<% end %>
<% if @comments.any? %>
	<br><%= pagination_subset_items_display(@comments.current_page, @comments.per_page, @comments.length, @comments.count, "comments") %><br>
	<ol id="comment" class="comment">
		<%= render @comments %>
	</ol>
	<%= will_paginate @comments %>
<% end %>
<%= render 'comments/create' %>
<br>
<% if @input != nil %>
	<%= input %>
<% end %>